<h1>Articles</h1>

<% @articles.each do |article| %>
    <h2><%= article.title %></h2>
    <p><%= article.intro %></p>
    <p class="authors">
      <% authors = article.authors%>
      Authors:
      <span class="names"><%= authors.map { |author| author.name }.join(', ') %></span>
    </p>
    <div class="buttons">
      <button class="name-sort">Sorting by name</button>
      <button class="number-of-articles-sort" data-article-id="<%= article.id%> ">Sorting by articles' number</button>
    </div>
<% end %>